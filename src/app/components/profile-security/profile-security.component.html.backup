<!-- Dashboard de Seguridad Moderno -->
<div class="security-dashboard">

  <!-- Loading Overlay -->
  <div class="loading-overlay" *ngIf="loading">
    <div class="loading-content">
      <div class="loading-spinner">
        <span class="material-symbols-outlined">autorenew</span>
      </div>
      <p>Procesando...</p>
    </div>
  </div>

  <!-- Header de la Página -->
  <header class="page-header">
    <div class="header-content">
      <div class="header-main">
        <div class="header-icon">
          <span class="material-symbols-outlined">security</span>
        </div>
        <div class="header-text">
          <h1 class="page-title">Mi Perfil y Seguridad</h1>
          <p class="page-subtitle">Gestiona tu información personal y configuraciones de seguridad</p>
        </div>
      </div>
      <div class="header-actions">
        <button class="btn-secondary">
          <span class="material-symbols-outlined">help</span>
          <span>Ayuda</span>
        </button>
      </div>
    </div>
  </header>

  <!-- Alertas y Mensajes -->
  <div class="alerts-container" *ngIf="successMessage || errorMessage">
    <div class="alert alert-success" *ngIf="successMessage">
      <div class="alert-content">
        <span class="material-symbols-outlined">check_circle</span>
        <span class="alert-text">{{ successMessage }}</span>
      </div>
      <button class="alert-close" (click)="clearMessages()">
        <span class="material-symbols-outlined">close</span>
      </button>
    </div>
    
    <div class="alert alert-error" *ngIf="errorMessage">
      <div class="alert-content">
        <span class="material-symbols-outlined">error</span>
        <span class="alert-text">{{ errorMessage }}</span>
      </div>
      <button class="alert-close" (click)="clearMessages()">
        <span class="material-symbols-outlined">close</span>
      </button>
    </div>
  </div>

  <!-- Grid de Tarjetas del Dashboard -->
  <div class="dashboard-grid">

    <!-- Profile Overview Card -->
    <section class="card-dashboard">
      <div class="card-header">
        <div class="card-title">
          <span class="material-symbols-outlined">person</span>
          <h2>Información del Perfil</h2>
        </div>
      </div>
      
      <div class="card-content" *ngIf="currentUser">
        <div class="profile-info">
          <div class="profile-avatar">
            <div class="avatar-circle">
              {{ (currentUser.firstName || 'U').charAt(0).toUpperCase() }}{{ (currentUser.lastName || 'S').charAt(0).toUpperCase() }}
            </div>
            <button class="avatar-edit-btn">
              <span class="material-symbols-outlined">edit</span>
            </button>
          </div>
          <div class="profile-details">
            <div class="detail-row">
              <label>Nombre Completo</label>
              <span>{{ currentUser.firstName || 'No especificado' }} {{ currentUser.lastName || '' }}</span>
            </div>
            <div class="detail-row">
              <label>Email</label>
              <span>{{ currentUser.email }}</span>
            </div>
            <div class="detail-row">
              <label>Estado de Verificación</label>
              <span class="text-success" *ngIf="currentUser.emailVerified">
                <span class="material-symbols-outlined">verified_user</span> Verificado
              </span>
              <span class="text-warning" *ngIf="!currentUser.emailVerified">
                <span class="material-symbols-outlined">warning</span> No verificado
              </span>
            </div>
          </div>
        </div>
      </div>

      <div class="card-content" *ngIf="!currentUser">
        <div class="profile-loading">
          <span class="material-symbols-outlined">person</span>
          <p>Cargando información del usuario...</p>
        </div>
      </div>
    </section>

    <!-- Two Factor Authentication Card -->
    <section class="card-dashboard">
      <div class="card-header">
        <div class="card-title">
          <span class="material-symbols-outlined">security</span>
          <h2>Autenticación de Dos Factores</h2>
        </div>
        <div class="badge badge-success" *ngIf="isTwoFactorEnabled">Activado</div>
        <div class="badge badge-warning" *ngIf="!isTwoFactorEnabled">Desactivado</div>
      </div>

      <div class="card-content">
        <div class="toggle-container">
          <div class="toggle-info">
            <h4>Habilitar 2FA</h4>
            <p>Agrega una capa adicional de seguridad a tu cuenta</p>
          </div>
          <label class="switch">
            <input type="checkbox" [checked]="isTwoFactorEnabled" (change)="toggleTwoFactor($event)">
            <span class="slider"></span>
          </label>
        </div>

        <div class="feature-benefits" *ngIf="!isTwoFactorEnabled">
          <h4>Beneficios de la Autenticación 2FA:</h4>
          <ul class="benefits-list">
            <li><span class="material-symbols-outlined">check</span>Mayor seguridad para tu cuenta</li>
            <li><span class="material-symbols-outlined">check</span>Protección contra accesos no autorizados</li>
            <li><span class="material-symbols-outlined">check</span>Códigos únicos desde tu móvil</li>
          </ul>
        </div>

        <div class="card-actions" *ngIf="isTwoFactorEnabled">
          <button class="btn-outline" (click)="showRecoveryCodes()">
            <span class="material-symbols-outlined">key</span>
            Ver Códigos de Respaldo
          </button>
          <button class="btn-accent" (click)="regenerateRecoveryCodes()">
            <span class="material-symbols-outlined">refresh</span>
            Regenerar Códigos
          </button>
        </div>
      </div>
    </section>

    <!-- Password Security Card -->
    <section class="card-dashboard">
      <div class="card-header">
        <div class="card-title">
          <span class="material-symbols-outlined">lock</span>
          <h2>Contraseña</h2>
        </div>
        <div class="badge badge-info">Última actualización: {{ getTimeSincePasswordChange() }}</div>
      </div>

      <div class="card-content">
        <form class="password-form" [formGroup]="passwordForm" (ngSubmit)="changePassword()">
          <div class="form-group">
            <label for="currentPassword">Contraseña Actual</label>
            <div class="input-group">
              <input
                type="password"
                id="currentPassword"
                formControlName="currentPassword"
                class="form-input"
                placeholder="Ingresa tu contraseña actual"
              >
              <button type="button" class="input-btn" (click)="togglePasswordVisibility('current')">
                <span class="material-symbols-outlined">{{ showCurrentPassword ? 'visibility_off' : 'visibility' }}</span>
              </button>
            </div>
            <div class="field-error" *ngIf="passwordForm.get('currentPassword')?.touched && passwordForm.get('currentPassword')?.errors">
              La contraseña actual es requerida
            </div>
          </div>

          <div class="form-group">
            <label for="newPassword">Nueva Contraseña</label>
            <div class="input-group">
              <input
                type="password"
                id="newPassword"
                formControlName="newPassword"
                class="form-input"
                placeholder="Ingresa tu nueva contraseña"
                (input)="checkPasswordStrength($event)"
              >
              <button type="button" class="input-btn" (click)="togglePasswordVisibility('new')">
                <span class="material-symbols-outlined">{{ showNewPassword ? 'visibility_off' : 'visibility' }}</span>
              </button>
            </div>
            <div class="password-strength" *ngIf="passwordForm.get('newPassword')?.value">
              <div class="strength-bar">
                <div class="strength-fill" [style.width.%]="passwordStrength.score"></div>
              </div>
              <p class="strength-text">{{ passwordStrength.text }}</p>
            </div>
            <div class="field-error" *ngIf="passwordForm.get('newPassword')?.touched && passwordForm.get('newPassword')?.errors">
              La nueva contraseña debe tener al menos 8 caracteres
            </div>
          </div>

          <div class="form-group">
            <label for="confirmPassword">Confirmar Nueva Contraseña</label>
            <div class="input-group">
              <input
                type="password"
                id="confirmPassword"
                formControlName="confirmPassword"
                class="form-input"
                placeholder="Confirma tu nueva contraseña"
              >
              <button type="button" class="input-btn" (click)="togglePasswordVisibility('confirm')">
                <span class="material-symbols-outlined">{{ showConfirmPassword ? 'visibility_off' : 'visibility' }}</span>
              </button>
            </div>
            <div class="field-error" *ngIf="passwordForm.get('confirmPassword')?.touched && passwordForm.get('confirmPassword')?.errors">
              Las contraseñas no coinciden
            </div>
          </div>

          <div class="card-actions">
            <button type="submit" class="btn-primary" [disabled]="passwordForm.invalid || loading">
              <span class="material-symbols-outlined">save</span>
              Actualizar Contraseña
            </button>
            <button type="button" class="btn-outline" (click)="resetPasswordForm()">
              Cancelar
            </button>
          </div>
        </form>
      </div>
    </section>

    <!-- Active Sessions Card -->
    <section class="card-dashboard">
      <div class="card-header">
        <div class="card-title">
          <span class="material-symbols-outlined">devices</span>
          <h2>Sesiones Activas</h2>
        </div>
      </div>

      <div class="card-content">
        <div class="sessions-list">
          <div class="session-item current-session">
            <div class="session-icon">
              <span class="material-symbols-outlined">computer</span>
            </div>
            <div class="session-details">
              <div class="session-device">Esta sesión actual</div>
              <div class="session-info">
                <span>Windows • Chrome</span>
                <span>IP: 192.168.1.100</span>
              </div>
            </div>
            <div class="session-actions">
              <span class="badge badge-info">Activa</span>
            </div>
          </div>

          <div class="session-item" *ngFor="let session of activeSessions">
            <div class="session-icon">
              <span class="material-symbols-outlined">{{ getSessionIcon(session.device) }}</span>
            </div>
            <div class="session-details">
              <div class="session-device">{{ session.device }}</div>
              <div class="session-info">
                <span>{{ session.browser }}</span>
                <span>{{ formatDate(session.lastActive) }}</span>
              </div>
            </div>
            <div class="session-actions">
              <button class="btn-danger-small" (click)="terminateSession(session.id)">
                <span class="material-symbols-outlined">power_off</span>
              </button>
            </div>
          </div>
        </div>

        <div class="card-actions">
          <button class="btn-outline" (click)="terminateAllOtherSessions()">
            <span class="material-symbols-outlined">logout</span>
            Cerrar Todas las Otras Sesiones
          </button>
        </div>
      </div>
    </section>

    <!-- Notification Preferences Card -->
    <section class="card-dashboard">
      <div class="card-header">
        <div class="card-title">
          <span class="material-symbols-outlined">notifications</span>
          <h2>Preferencias de Notificación</h2>
        </div>
      </div>

      <div class="card-content">
        <div class="notifications-list">
          <div class="notification-item">
            <div class="notification-info">
              <h4>Notificaciones de Seguridad</h4>
              <p>Recibe alertas sobre actividad sospechosa en tu cuenta</p>
            </div>
            <label class="switch">
              <input type="checkbox" [checked]="securityNotifications" (change)="toggleSecurityNotifications($event)">
              <span class="slider"></span>
            </label>
          </div>

          <div class="notification-item">
            <div class="notification-info">
              <h4>Nuevos Inicios de Sesión</h4>
              <p>Te notificaremos cuando inicies sesión desde un nuevo dispositivo</p>
            </div>
            <label class="switch">
              <input type="checkbox" [checked]="loginNotifications" (change)="toggleLoginNotifications($event)">
              <span class="slider"></span>
            </label>
          </div>

          <div class="notification-item">
            <div class="notification-info">
              <h4>Cambios en la Cuenta</h4>
              <p>Recibe confirmaciones cuando realices cambios importantes</p>
            </div>
            <label class="switch">
              <input type="checkbox" [checked]="accountNotifications" (change)="toggleAccountNotifications($event)">
              <span class="slider"></span>
            </label>
          </div>
        </div>
      </div>
    </section>

    <!-- Security Logs Card -->
    <section class="card-dashboard">
      <div class="card-header">
        <div class="card-title">
          <span class="material-symbols-outlined">history</span>
          <h2>Registros de Seguridad</h2>
        </div>
      </div>

      <div class="card-content">
        <div class="logs-list">
          <div class="log-item" *ngFor="let log of securityLogs">
            <div class="log-icon" [ngClass]="{
              'log-success': log.type === 'success',
              'log-warning': log.type === 'warning',
              'log-error': log.type === 'error'
            }">
              <span class="material-symbols-outlined">{{ getLogIcon(log.type) }}</span>
            </div>
            <div class="log-details">
              <div class="log-action">{{ log.action }}</div>
              <div class="log-meta">
                <span>{{ formatDate(log.timestamp) }}</span>
                <span>IP: {{ log.ipAddress }}</span>
              </div>
            </div>
            <div class="log-status" [ngClass]="{
              'status-success': log.status === 'success',
              'status-warning': log.status === 'warning', 
              'status-error': log.status === 'error'
            }">
              {{ log.status }}
            </div>
          </div>
        </div>

        <div class="card-actions">
          <button class="btn-outline" (click)="refreshLogs()">
            <span class="material-symbols-outlined">refresh</span>
            Actualizar
          </button>
          <button class="btn-outline" (click)="exportLogs()">
            <span class="material-symbols-outlined">download</span>
            Exportar
          </button>
        </div>
      </div>
    </section>

  </div>
</div>
            </button>
          </div>
          
          <div class="profile-details">
            <div class="detail-row">
              <label>Nombre Completo</label>
              <span>{{ currentUser.firstName || 'No especificado' }} {{ currentUser.lastName || '' }}</span>
            </div>
            <div class="detail-row">
              <label>Email</label>
              <span>{{ currentUser.email }}</span>
            </div>
            <div class="detail-row">
              <label>Fecha de Registro</label>
              <span>{{ formatDate(currentUser.createdAt) }}</span>
            </div>
          </div>
        </div>
        
        <div class="card-actions">
          <button class="btn-primary">
            <span class="material-symbols-outlined">edit</span>
            <span>Editar Perfil</span>
          </button>
        </div>
      </div>
    </section>

    <!-- Configuración de 2FA -->
    <section class="card-dashboard security-2fa">
      <div class="card-header">
        <div class="card-title">
          <span class="material-symbols-outlined">verified_user</span>
          <h2>Autenticación de Dos Factores</h2>
        </div>
        <div class="card-status">
          <span class="badge" [ngClass]="{'badge-success': is2FAEnabled, 'badge-warning': !is2FAEnabled}">
            {{ is2FAEnabled ? 'Activado' : 'Desactivado' }}
          </span>
        </div>
      </div>
      
      <div class="card-content">
        <div class="feature-description">
          <p>Agrega una capa extra de seguridad a tu cuenta con la autenticación de dos factores.</p>
        </div>
        
        <div class="toggle-container">
          <div class="toggle-info">
            <strong>Estado actual:</strong>
            <span [ngClass]="{'text-success': is2FAEnabled, 'text-warning': !is2FAEnabled}">
              {{ is2FAEnabled ? 'Protección activada' : 'Sin protección adicional' }}
            </span>
          </div>
          
          <div class="toggle-switch">
            <label class="switch">
              <input type="checkbox" [checked]="is2FAEnabled" (change)="toggle2FA($event)">
              <span class="slider"></span>
            </label>
          </div>
        </div>
        
        <div class="feature-benefits" *ngIf="!is2FAEnabled">
          <h4>Beneficios de activar 2FA:</h4>
          <ul class="benefits-list">
            <li><span class="material-symbols-outlined">check</span> Protección contra accesos no autorizados</li>
            <li><span class="material-symbols-outlined">check</span> Notificaciones de intentos de acceso</li>
            <li><span class="material-symbols-outlined">check</span> Mayor seguridad en transacciones</li>
          </ul>
        </div>
        
        <div class="card-actions">
          <button 
            class="btn-accent" 
            *ngIf="!is2FAEnabled"
            (click)="setup2FA()"
            [disabled]="loading">
            <span class="material-symbols-outlined">security</span>
            <span>Configurar 2FA</span>
          </button>
          
          <button 
            class="btn-outline" 
            *ngIf="is2FAEnabled"
            (click)="disable2FA()"
            [disabled]="loading">
            <span class="material-symbols-outlined">cancel</span>
            <span>Desactivar 2FA</span>
          </button>
        </div>
      </div>
    </section>

    <!-- Cambio de Contraseña -->
    <section class="card-dashboard password-change">
      <div class="card-header">
        <div class="card-title">
          <span class="material-symbols-outlined">key</span>
          <h2>Cambiar Contraseña</h2>
        </div>
        <div class="card-status">
          <span class="badge badge-info">Actualizable</span>
        </div>
      </div>
      
      <div class="card-content">
        <form [formGroup]="passwordForm" (ngSubmit)="changePassword()" class="password-form">
          <div class="form-group">
            <label for="currentPassword">Contraseña Actual</label>
            <div class="input-group">
              <input 
                type="password" 
                id="currentPassword"
                formControlName="currentPassword"
                class="form-input"
                placeholder="Ingresa tu contraseña actual">
              <button type="button" class="input-btn">
                <span class="material-symbols-outlined">visibility</span>
              </button>
            </div>
            <div class="field-error" *ngIf="passwordForm.get('currentPassword')?.errors?.['required'] && passwordForm.get('currentPassword')?.touched">
              Campo requerido
            </div>
          </div>
          
          <div class="form-group">
            <label for="newPassword">Nueva Contraseña</label>
            <div class="input-group">
              <input 
                type="password" 
                id="newPassword"
                formControlName="newPassword"
                class="form-input"
                placeholder="Ingresa tu nueva contraseña">
              <button type="button" class="input-btn">
                <span class="material-symbols-outlined">visibility</span>
              </button>
            </div>
            <div class="password-strength">
              <div class="strength-bar">
                <div class="strength-fill" [style.width]="getPasswordStrength() + '%'"></div>
              </div>
              <span class="strength-text">{{ getPasswordStrengthText() }}</span>
            </div>
          </div>
          
          <div class="form-group">
            <label for="confirmPassword">Confirmar Contraseña</label>
            <div class="input-group">
              <input 
                type="password" 
                id="confirmPassword"
                formControlName="confirmPassword"
                class="form-input"
                placeholder="Confirma tu nueva contraseña">
              <button type="button" class="input-btn">
                <span class="material-symbols-outlined">visibility</span>
              </button>
            </div>
            <div class="field-error" *ngIf="passwordForm.errors?.['passwordMismatch'] && passwordForm.get('confirmPassword')?.touched">
              Las contraseñas no coinciden
            </div>
          </div>
          
          <div class="card-actions">
            <button type="submit" class="btn-primary" [disabled]="passwordForm.invalid || loading">
              <span class="material-symbols-outlined">save</span>
              <span>Actualizar Contraseña</span>
            </button>
            <button type="button" class="btn-outline" (click)="resetPasswordForm()">
              <span class="material-symbols-outlined">refresh</span>
              <span>Limpiar</span>
            </button>
          </div>
        </form>
      </div>
    </section>

    <!-- Sesiones Activas -->
    <section class="card-dashboard active-sessions">
      <div class="card-header">
        <div class="card-title">
          <span class="material-symbols-outlined">devices</span>
          <h2>Sesiones Activas</h2>
        </div>
        <div class="card-status">
          <span class="badge badge-info">{{ activeSessions.length }} activas</span>
        </div>
      </div>
      
      <div class="card-content">
        <div class="sessions-list">
          <div class="session-item current-session">
            <div class="session-icon">
              <span class="material-symbols-outlined">computer</span>
            </div>
            <div class="session-details">
              <div class="session-device">Sesión Actual</div>
              <div class="session-info">
                <span class="session-location">Ciudad de México, México</span>
                <span class="session-time">Activa ahora</span>
              </div>
            </div>
            <div class="session-status">
              <span class="badge badge-success">Actual</span>
            </div>
          </div>
          
          <div class="session-item" *ngFor="let session of activeSessions">
            <div class="session-icon">
              <span class="material-symbols-outlined">{{ getDeviceIcon(session.device) }}</span>
            </div>
            <div class="session-details">
              <div class="session-device">{{ session.device || 'Dispositivo desconocido' }}</div>
              <div class="session-info">
                <span class="session-location">{{ session.location || 'Ubicación desconocida' }}</span>
                <span class="session-time">{{ formatLastActive(session.lastActive) }}</span>
              </div>
            </div>
            <div class="session-actions">
              <button class="btn-danger-small" (click)="terminateSession(session.id)">
                <span class="material-symbols-outlined">logout</span>
              </button>
            </div>
          </div>
        </div>
        
        <div class="card-actions">
          <button class="btn-outline" (click)="refreshSessions()">
            <span class="material-symbols-outlined">refresh</span>
            <span>Actualizar Lista</span>
          </button>
          <button class="btn-danger" (click)="terminateAllSessions()">
            <span class="material-symbols-outlined">logout</span>
            <span>Cerrar Todas las Sesiones</span>
          </button>
        </div>
      </div>
    </section>

    <!-- Configuración de Notificaciones -->
    <section class="card-dashboard notifications-settings">
      <div class="card-header">
        <div class="card-title">
          <span class="material-symbols-outlined">notifications</span>
          <h2>Configuración de Notificaciones</h2>
        </div>
        <div class="card-status">
          <span class="badge badge-info">Personalizable</span>
        </div>
      </div>
      
      <div class="card-content">
        <div class="notifications-list">
          <div class="notification-item">
            <div class="notification-info">
              <h4>Notificaciones de Seguridad</h4>
              <p>Recibe alertas sobre intentos de acceso y cambios de seguridad</p>
            </div>
            <div class="notification-toggle">
              <label class="switch">
                <input type="checkbox" [checked]="notificationSettings.security" (change)="updateNotificationSetting('security', $event)">
                <span class="slider"></span>
              </label>
            </div>
          </div>
          
          <div class="notification-item">
            <div class="notification-info">
              <h4>Notificaciones por Email</h4>
              <p>Recibe notificaciones importantes en tu correo electrónico</p>
            </div>
            <div class="notification-toggle">
              <label class="switch">
                <input type="checkbox" [checked]="notificationSettings.email" (change)="updateNotificationSetting('email', $event)">
                <span class="slider"></span>
              </label>
            </div>
          </div>
          
          <div class="notification-item">
            <div class="notification-info">
              <h4>Notificaciones Push</h4>
              <p>Recibe notificaciones instantáneas en tu navegador</p>
            </div>
            <div class="notification-toggle">
              <label class="switch">
                <input type="checkbox" [checked]="notificationSettings.push" (change)="updateNotificationSetting('push', $event)">
                <span class="slider"></span>
              </label>
            </div>
          </div>
        </div>
        
        <div class="card-actions">
          <button class="btn-primary" (click)="saveNotificationSettings()">
            <span class="material-symbols-outlined">save</span>
            <span>Guardar Preferencias</span>
          </button>
        </div>
      </div>
    </section>

    <!-- Logs de Seguridad -->
    <section class="card-dashboard security-logs">
      <div class="card-header">
        <div class="card-title">
          <span class="material-symbols-outlined">history</span>
          <h2>Actividad Reciente</h2>
        </div>
        <div class="card-status">
          <span class="badge badge-info">Últimas 24h</span>
        </div>
      </div>
      
      <div class="card-content">
        <div class="logs-list">
          <div class="log-item" *ngFor="let log of securityLogs">
            <div class="log-icon" [ngClass]="'log-' + log.type">
              <span class="material-symbols-outlined">{{ getLogIcon(log.type) }}</span>
            </div>
            <div class="log-details">
              <div class="log-action">{{ log.action }}</div>
              <div class="log-meta">
                <span class="log-time">{{ formatLogTime(log.timestamp) }}</span>
                <span class="log-ip">{{ log.ipAddress }}</span>
              </div>
            </div>
            <div class="log-status" [ngClass]="'status-' + log.status">
              {{ log.status }}
            </div>
          </div>
        </div>
        
        <div class="card-actions">
          <button class="btn-outline" (click)="loadMoreLogs()">
            <span class="material-symbols-outlined">expand_more</span>
            <span>Ver Más</span>
          </button>
          <button class="btn-outline" (click)="exportLogs()">
            <span class="material-symbols-outlined">download</span>
            <span>Exportar</span>
          </button>
        </div>
      </div>
    </section>

  </div>
</div>

      <span class="material-symbols-outlined">person</span>
      <h2>Información del Perfil</h2>
    </div>
      
      <div class="card-content" *ngIf="currentUser">
        <div class="profile-info">
          <div class="profile-avatar">
            {{ (currentUser.firstName || 'U').charAt(0).toUpperCase() }}{{ (currentUser.lastName || 'S').charAt(0).toUpperCase() }}
          </div>
          <div class="profile-details">
            <h3>{{ currentUser.firstName || 'Usuario' }} {{ currentUser.lastName || '' }}</h3>
            <p class="email">{{ currentUser.email }}</p>
            <div class="profile-stats">
              <span class="stat">
                <span class="material-symbols-outlined">verified_user</span>
                Email Verificado
              </span>
              <span class="stat">
                <span class="material-symbols-outlined">security</span>
                2FA: {{ isTwoFactorEnabled ? 'Activado' : 'Desactivado' }}
              </span>
            </div>
          </div>
        </div>
      </div>

      <div class="card-content" *ngIf="!currentUser">
        <div class="profile-loading">
          <span class="material-symbols-outlined">person</span>
          <p>Cargando información del usuario...</p>
        </div>
      </div>
    </section>

    <!-- Password Security Card -->
    <section class="card password-card">
      <div class="card-header">
        <span class="material-symbols-outlined">lock</span>
        <h2>Contraseña</h2>
      </div>
      
      <div class="card-content">
        <div class="password-info">
          <p class="last-change">
            <strong>Último cambio:</strong> {{ getTimeSincePasswordChange() }}
          </p>
          <p class="security-tip">
            Se recomienda cambiar la contraseña cada 6 meses
          </p>
        </div>
        
        <button 
          class="btn btn-outline" 
          (click)="togglePasswordForm()"
          [disabled]="loading">
          <span class="material-symbols-outlined">edit</span>
          Cambiar Contraseña
        </button>
        
        <!-- Password Change Form -->
        <div class="password-form" *ngIf="showPasswordForm" [@slideIn]>
          <form (ngSubmit)="changePassword()" #passwordFormRef="ngForm">
            
            <div class="form-group">
              <label for="currentPassword">Contraseña Actual</label>
              <input 
                type="password"
                id="currentPassword"
                [(ngModel)]="passwordForm.currentPassword"
                name="currentPassword"
                placeholder="Ingrese su contraseña actual"
                required>
            </div>

            <div class="form-group">
              <label for="newPassword">Nueva Contraseña</label>
              <input 
                type="password"
                id="newPassword"
                [(ngModel)]="passwordForm.newPassword"
                name="newPassword"
                placeholder="Ingrese su nueva contraseña"
                required
                minlength="8">
              
              <!-- Password Strength Indicator -->
              <div class="password-strength" *ngIf="passwordForm.newPassword">
                <div class="strength-bar">
                  <div 
                    class="strength-fill"
                    [class]="getPasswordStrengthClass(passwordForm.newPassword)">
                  </div>
                </div>
                <span class="strength-text">
                  Seguridad: {{ getPasswordStrengthText(passwordForm.newPassword) }}
                </span>
              </div>
            </div>

            <div class="form-group">
              <label for="confirmPassword">Confirmar Nueva Contraseña</label>
              <input 
                type="password"
                id="confirmPassword"
                [(ngModel)]="passwordForm.confirmPassword"
                name="confirmPassword"
                placeholder="Confirme su nueva contraseña"
                required>
            </div>

            <div class="form-actions">
              <button 
                type="button" 
                class="btn btn-outline" 
                (click)="togglePasswordForm()"
                [disabled]="loading">
                Cancelar
              </button>
              <button 
                type="submit" 
                class="btn btn-primary"
                [disabled]="loading || passwordFormRef.invalid">
                <span class="material-symbols-outlined" *ngIf="loading">autorenew</span>
                <span class="material-symbols-outlined" *ngIf="!loading">save</span>
                {{ loading ? 'Guardando...' : 'Guardar Cambios' }}
              </button>
            </div>
            
          </form>
        </div>
        
      </div>
    </section>

    <!-- Two Factor Authentication Card - Métodos Separados -->
    <section class="card twofa-card">
      <div class="card-header">
        <span class="material-symbols-outlined">shield</span>
        <h2>Autenticación de Dos Factores</h2>
      </div>
      
      <div class="card-content">
        <!-- Estado General 2FA -->
        <div class="twofa-status">
          <div class="status-indicator" [class.active]="isTwoFactorEnabled">
            <span class="material-symbols-outlined">
              {{ isTwoFactorEnabled ? 'check_circle' : 'radio_button_unchecked' }}
            </span>
            <div class="status-text">
              <h3>{{ isTwoFactorEnabled ? 'Activado' : 'Desactivado' }}</h3>
              <p>
                {{ isTwoFactorEnabled 
                  ? 'Tu cuenta está protegida con 2FA' 
                  : 'Activa al menos un método de 2FA para mayor seguridad' }}
              </p>
            </div>
          </div>
        </div>

        <!-- Separador -->
        <hr class="methods-divider" style="margin: 1.5rem 0; border: none; border-top: 1px solid var(--gray-200);">

        <!-- ===== MÉTODO 1: GOOGLE AUTHENTICATOR ===== -->
        <div class="twofa-method" style="margin-bottom: 1.5rem; padding: 1rem; border: 1px solid var(--gray-200); border-radius: var(--border-radius-lg);">
          <div class="method-header" style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 1rem;">
            <div class="method-info" style="display: flex; align-items: center; gap: 1rem;">
              <div class="method-icon" style="width: 48px; height: 48px; background: var(--color-fondo); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                <span class="material-symbols-outlined" style="color: var(--color-primario); font-size: 1.5rem;">smartphone</span>
              </div>
              <div>
                <h4 style="margin: 0; color: var(--color-primario); font-weight: 600;">Google Authenticator</h4>
                <p style="margin: 0; font-size: 0.85rem; color: var(--color-texto-secundario);">Usa la app para generar códigos de 6 dígitos</p>
              </div>
            </div>
            <div class="method-status">
              <span 
                class="badge" 
                [style.background]="isGoogleAuthEnabled ? 'var(--success-500)' : 'var(--gray-400)'"
                style="color: white; padding: 0.25rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 600;">
                {{ isGoogleAuthEnabled ? 'Activo' : 'Inactivo' }}
              </span>
            </div>
          </div>

          <div class="method-actions">
            <!-- Si NO está activado, mostrar botón para configurar -->
            <button 
              class="btn btn-primary" 
              *ngIf="!isGoogleAuthEnabled"
              (click)="toggle2FASetup()"
              [disabled]="loading"
              style="width: 100%;">
              <span class="material-symbols-outlined">add_circle</span>
              Configurar Google Authenticator
            </button>
            
            <!-- Si ESTÁ activado, mostrar botón para desactivar -->
            <button 
              class="btn btn-outline btn-danger-outline" 
              *ngIf="isGoogleAuthEnabled"
              (click)="disableGoogleAuth()"
              [disabled]="loading"
              style="width: 100%; border-color: var(--color-error); color: var(--color-error);">
              <span class="material-symbols-outlined">cancel</span>
              Desactivar Google Authenticator
            </button>
          </div>
        </div>

        <!-- ===== MÉTODO 2: VERIFICACIÓN POR EMAIL ===== -->
        <div class="twofa-method" style="margin-bottom: 1.5rem; padding: 1rem; border: 1px solid var(--gray-200); border-radius: var(--border-radius-lg);">
          <div class="method-header" style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 1rem;">
            <div class="method-info" style="display: flex; align-items: center; gap: 1rem;">
              <div class="method-icon" style="width: 48px; height: 48px; background: var(--color-fondo); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                <span class="material-symbols-outlined" style="color: var(--color-accion); font-size: 1.5rem;">mail</span>
              </div>
              <div>
                <h4 style="margin: 0; color: var(--color-primario); font-weight: 600;">Verificación por Email</h4>
                <p style="margin: 0; font-size: 0.85rem; color: var(--color-texto-secundario);">Recibe un código de verificación en tu correo</p>
              </div>
            </div>
            <div class="method-status">
              <span 
                class="badge" 
                [style.background]="isEmailTwoFactorEnabled ? 'var(--success-500)' : 'var(--gray-400)'"
                style="color: white; padding: 0.25rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 600;">
                {{ isEmailTwoFactorEnabled ? 'Activo' : 'Inactivo' }}
              </span>
            </div>
          </div>

          <div class="method-actions">
            <!-- Si NO está activado, mostrar botón para activar -->
            <button 
              class="btn btn-primary" 
              *ngIf="!isEmailTwoFactorEnabled"
              (click)="enableEmail2FA()"
              [disabled]="loading"
              style="width: 100%; background: var(--color-accion);">
              <span class="material-symbols-outlined">mail</span>
              Activar Verificación por Email
            </button>
            
            <!-- Si ESTÁ activado, mostrar botón para desactivar -->
            <button 
              class="btn btn-outline btn-danger-outline" 
              *ngIf="isEmailTwoFactorEnabled"
              (click)="disableEmail2FA()"
              [disabled]="loading"
              style="width: 100%; border-color: var(--color-error); color: var(--color-error);">
              <span class="material-symbols-outlined">cancel</span>
              Desactivar Verificación por Email
            </button>
          </div>
        </div>

        <!-- Setup de Google Authenticator (Se muestra cuando se configura) -->
        <div class="twofa-setup" *ngIf="show2FASetup" [@slideIn]>
          <div class="setup-steps">
            
            <div class="setup-step">
              <div class="step-number">1</div>
              <div class="step-content">
                <h4>Descarga la aplicación</h4>
                <p>Instala Google Authenticator o cualquier aplicación TOTP compatible</p>
                <div class="app-links">
                  <a href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2" target="_blank" class="app-link">
                    <span class="material-symbols-outlined">android</span>
                    Google Play
                  </a>
                  <a href="https://apps.apple.com/us/app/google-authenticator/id388497605" target="_blank" class="app-link">
                    <span class="material-symbols-outlined">phone_iphone</span>
                    App Store
                  </a>
                </div>
              </div>
            </div>

            <div class="setup-step">
              <div class="step-number">2</div>
              <div class="step-content">
                <h4>Escanea el código QR</h4>
                <!-- QR disponible -->
                <div class="qr-container" *ngIf="twoFactorData.qrCode">
                  <img [src]="twoFactorData.qrCode" alt="Código QR para 2FA" class="qr-image">
                  <div class="manual-entry">
                    <p><strong>Código manual:</strong></p>
                    <code class="secret-code">{{ twoFactorData.secret }}</code>
                  </div>
                </div>
                <!-- Cargando QR -->
                <div class="loading-qr" *ngIf="!twoFactorData.qrCode && loading">
                  <span class="material-symbols-outlined spinning">autorenew</span>
                  <p>Generando código QR...</p>
                </div>
                <!-- Error: QR no disponible -->
                <div class="qr-error" *ngIf="!twoFactorData.qrCode && !loading" style="text-align: center; padding: 1rem; background: #fff3cd; border-radius: 8px; border: 1px solid #ffc107;">
                  <span class="material-symbols-outlined" style="font-size: 2rem; color: #856404;">warning</span>
                  <p style="margin: 0.5rem 0; color: #856404;">No se pudo cargar el código QR.</p>
                  <button class="btn btn-outline" (click)="generate2FAQRCode()" style="margin-top: 0.5rem;">
                    <span class="material-symbols-outlined">refresh</span>
                    Reintentar
                  </button>
                </div>
              </div>
            </div>

            <div class="setup-step">
              <div class="step-number">3</div>
              <div class="step-content">
                <h4>Verifica el código</h4>
                <p>Ingresa el código de 6 dígitos de tu aplicación authenticator</p>
                <div class="verification-form">
                  <input 
                    type="text"
                    [(ngModel)]="twoFactorData.verificationCode"
                    placeholder="000000"
                    maxlength="6"
                    class="verification-input"
                    #codeInput>
                  <button 
                    class="btn btn-primary"
                    (click)="enable2FA()"
                    [disabled]="loading || twoFactorData.verificationCode.length !== 6">
                    <span class="material-symbols-outlined" *ngIf="loading">autorenew</span>
                    <span class="material-symbols-outlined" *ngIf="!loading">verified</span>
                    {{ loading ? 'Verificando...' : 'Verificar y Activar' }}
                  </button>
                </div>
              </div>
            </div>
            
          </div>

          <div class="setup-actions">
            <button 
              class="btn btn-outline" 
              (click)="toggle2FASetup()"
              [disabled]="loading">
              Cancelar
            </button>
          </div>
        </div>
        
      </div>
    </section>

    <!-- Backup Codes Card - Visible si cualquier método 2FA está activo -->
    <section class="card backup-codes-card" *ngIf="isTwoFactorEnabled">
      <div class="card-header">
        <span class="material-symbols-outlined">key</span>
        <h2>Códigos de Respaldo</h2>
      </div>
      
      <div class="card-content">
        <div class="backup-info">
          <p class="codes-count">
            <strong>Códigos disponibles:</strong> {{ backupCodesCount }}
          </p>
          <p class="codes-description">
            Los códigos de respaldo te permiten acceder a tu cuenta si pierdes el acceso a tu aplicación authenticator o email.
          </p>
        </div>

        <div class="backup-actions">
          <!-- Botón principal para generar códigos -->
          <button 
            class="btn btn-primary" 
            (click)="generateCodes()"
            [disabled]="loading">
            <span class="material-symbols-outlined spinning" *ngIf="loading">autorenew</span>
            <span class="material-symbols-outlined" *ngIf="!loading">{{ backupCodes.length > 0 || backupCodesCount > 0 ? 'refresh' : 'add_circle' }}</span>
            {{ loading ? 'Generando...' : (backupCodes.length > 0 || backupCodesCount > 0 ? 'Regenerar Códigos' : 'Generar 10 Códigos') }}
          </button>
        </div>

        <!-- Loading mientras se generan los códigos -->
        <div class="codes-loading" *ngIf="backupCodes.length === 0 && loading" style="text-align: center; padding: 1rem;">
          <span class="material-symbols-outlined spinning">autorenew</span>
          <p>Generando códigos de respaldo...</p>
        </div>

        <!-- Backup Codes Display - Solo cuando hay códigos -->
        <div class="backup-codes-display" *ngIf="backupCodes.length > 0" [@slideIn]>
          <div class="codes-warning">
            <span class="material-symbols-outlined">warning</span>
            <p><strong>¡Importante!</strong> Guarda estos códigos en un lugar seguro. Cada código solo se puede usar una vez.</p>
          </div>
          
          <div class="codes-grid">
            <div class="code-item" *ngFor="let code of backupCodes">
              <code class="backup-code">{{ code }}</code>
            </div>
          </div>
          
          <div class="codes-actions">
            <button 
              class="btn btn-outline"
              (click)="copyBackupCodes()">
              <span class="material-symbols-outlined">content_copy</span>
              Copiar Todos
            </button>
            <button 
              class="btn btn-primary"
              (click)="downloadBackupCodes()">
              <span class="material-symbols-outlined">download</span>
              Descargar
            </button>
          </div>
        </div>
        
      </div>
    </section>

    <!-- Security Summary Card -->
    <section class="card security-summary-card">
      <div class="card-header">
        <span class="material-symbols-outlined">verified_user</span>
        <h2>Resumen de Seguridad</h2>
      </div>
      
      <div class="card-content">
        <div class="security-score">
          <div class="score-circle" [class]="getSecurityLevel()">
            <span class="score-value">{{ getSecurityScore() }}%</span>
          </div>
          <div class="score-info">
            <h3 class="security-level">{{ getSecurityLevelText() }}</h3>
            <p class="security-description">{{ getSecurityDescription() }}</p>
          </div>
        </div>
        
        <div class="security-checklist">
          <div class="check-item" [class.completed]="currentUser?.email">
            <span class="material-symbols-outlined">
              {{ currentUser?.email ? 'check_circle' : 'radio_button_unchecked' }}
            </span>
            <span>Email verificado</span>
          </div>
          <div class="check-item" [class.completed]="lastPasswordChange">
            <span class="material-symbols-outlined">
              {{ lastPasswordChange ? 'check_circle' : 'radio_button_unchecked' }}
            </span>
            <span>Contraseña segura</span>
          </div>
          <div class="check-item" [class.completed]="isTwoFactorEnabled">
            <span class="material-symbols-outlined">
              {{ isTwoFactorEnabled ? 'check_circle' : 'radio_button_unchecked' }}
            </span>
            <span>2FA activado</span>
          </div>
          <div class="check-item" [class.completed]="backupCodesEnabled && backupCodesCount > 0">
            <span class="material-symbols-outlined">
              {{ (backupCodesEnabled && backupCodesCount > 0) ? 'check_circle' : 'radio_button_unchecked' }}
            </span>
            <span>Códigos de respaldo</span>
          </div>
        </div>
      </div>
    </section>

  </div>

  <!-- Modal de Códigos de Respaldo Generados -->
  <div class="modal-overlay" *ngIf="showBackupCodesModal" [@slideIn]>
    <div class="modal-container backup-codes-modal">
      <div class="modal-header">
        <h2>
          <span class="material-symbols-outlined">key</span>
          Códigos de Respaldo Generados
        </h2>
        <button class="modal-close" (click)="closeBackupCodesModal()">
          <span class="material-symbols-outlined">close</span>
        </button>
      </div>
      
      <div class="modal-body">
        <!-- Advertencia de seguridad -->
        <div class="security-warning">
          <span class="material-symbols-outlined error-icon">warning</span>
          <div class="warning-text">
            <h3>¡Guarda estos códigos!</h3>
            <p>Es la única vez que los verás. Si pierdes tus códigos, perderás el acceso a tu cuenta.</p>
          </div>
        </div>

        <!-- Lista de códigos -->
        <div class="backup-codes-list">
          <div class="codes-grid-apple">
  <div class="code-item-apple" *ngFor="let code of backupCodes; let i = index">
    <div class="code-circle">{{ i + 1 }}</div>
    <div class="code-box">{{ code }}</div>
  </div>
</div>

        </div>

        <!-- Instrucciones -->
        <div class="backup-instructions">
          <h4>Instrucciones importantes:</h4>
          <ul>
            <li>Cada código solo se puede usar una vez</li>
            <li>Guárdalos en un lugar seguro (preferiblemente offline)</li>
            <li>Úsalos solo si pierdes el acceso a tu aplicación authenticator</li>
          </ul>
        </div>
      </div>

      <div class="modal-footer">
        <button class="btn btn-outline" (click)="downloadBackupCodes()">
          <span class="material-symbols-outlined">download</span>
          Descargar (.txt)
        </button>
        <button class="btn btn-secondary" (click)="copyBackupCodes()">
          <span class="material-symbols-outlined">content_copy</span>
          Copiar Todo
        </button>
        <button class="btn btn-primary" (click)="closeBackupCodesModal()">
          <span class="material-symbols-outlined">check</span>
          Entendido
        </button>
      </div>
    </div>
  </div>

  <!-- Modal de Advertencia para Ver Códigos -->
  <div class="modal-overlay" *ngIf="showBackupCodesWarningModal" [@slideIn]>
    <div class="modal-container warning-modal">
      <div class="modal-header">
        <h2>
          <span class="material-symbols-outlined">warning</span>
          ¡Atención!
        </h2>
        <button class="modal-close" (click)="closeWarningModal()">
          <span class="material-symbols-outlined">close</span>
        </button>
      </div>
      
      <div class="modal-body">
        <div class="warning-content">
          <p class="warning-main">
            Ver tus códigos los <strong>invalidará todos</strong> y generará 10 nuevos códigos.
          </p>
          <p class="warning-secondary">
            Los códigos actuales dejarán de funcionar permanentemente.
          </p>
          <p class="warning-question">
            ¿Estás seguro de que deseas continuar?
          </p>
        </div>
      </div>

      <div class="modal-footer">
        <button class="btn btn-outline" (click)="closeWarningModal()">
          <span class="material-symbols-outlined">cancel</span>
          Cancelar
        </button>
        <button class="btn btn-danger" (click)="confirmRegenerateCodes()">
          <span class="material-symbols-outlined">warning</span>
          Sí, Generar Nuevos
        </button>
        </div>
      </div>
    </div>
  </div>
</div>